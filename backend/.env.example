# ==============================================
# DATABASE CONFIGURATION
# ==============================================
# PostgreSQL Database (Supabase)
# Connection pooling URL for queries (use pooler for better performance)
DATABASE_URL="postgresql://postgres.[PROJECT-REF]:[PASSWORD]@aws-1-ap-south-1.pooler.supabase.com:6543/postgres?pgbouncer=true"

# Direct connection URL for migrations (required for Prisma migrations)
DIRECT_URL="postgresql://postgres.[PROJECT-REF]:[PASSWORD]@aws-1-ap-south-1.connect.supabase.com:5432/postgres"

# ==============================================
# JWT AUTHENTICATION
# ==============================================
# JWT Secrets - CHANGE THESE IN PRODUCTION!
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_ACCESS_SECRET=your-secret-here-change-in-production
JWT_REFRESH_SECRET=your-secret-here-change-in-production
JWT_ACCESS_EXPIRES=15m
JWT_REFRESH_EXPIRES=7d
REFRESH_TOKEN_COOKIE_NAME=refresh_token

# ==============================================
# EMAIL CONFIGURATION
# ==============================================
# SMTP Settings (Gmail)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM_NAME=RapidTool-Fixture
EMAIL_FROM_ADDRESS=your-email@gmail.com

# ==============================================
# APPLICATION URLS
# ==============================================
# Frontend Application URL (used in email links)
APP_URL=http://localhost:8080
FRONTEND_URL=http://localhost:8080

# Backend API URL
API_URL=http://localhost:3000

# ==============================================
# SERVER CONFIGURATION
# ==============================================
# Environment Mode
NODE_ENV=development

# Server Port
PORT=3000

# CORS Configuration
CORS_ORIGIN=http://localhost:8080

# Allow local network IPs in development (192.168.x.x, 10.x.x.x)
# Set to 'false' or remove in production
ALLOW_LOCAL_NETWORK=true

# ==============================================
# SECURITY SETTINGS
# ==============================================
# Account Lockout
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCKOUT_DURATION=900000  # 15 minutes in milliseconds

# Token Expiry Times (in milliseconds)
VERIFICATION_TOKEN_EXPIRY=86400000  # 24 hours
PASSWORD_RESET_EXPIRY=3600000  # 1 hour

# ==============================================
# RATE LIMITING
# ==============================================
# Login Rate Limit
LOGIN_RATE_LIMIT_WINDOW=900000  # 15 minutes
LOGIN_RATE_LIMIT_MAX=5

# Registration Rate Limit
REGISTER_RATE_LIMIT_WINDOW=3600000  # 1 hour
REGISTER_RATE_LIMIT_MAX=3

# Password Reset Rate Limit
RESET_RATE_LIMIT_WINDOW=3600000  # 1 hour
RESET_RATE_LIMIT_MAX=3

# ==============================================
# PASSWORD POLICY
# ==============================================
# Minimum password length
PASSWORD_MIN_LENGTH=8

# Bcrypt rounds for password hashing
BCRYPT_ROUNDS=12

# ==============================================
# LICENSE CONFIGURATION
# ==============================================
# Trial Settings
TRIAL_DURATION_DAYS=14
EXPIRY_WARNING_DAYS=7

# Model Limits
FREE_MODEL_LIMIT=5
PREMIUM_MODEL_LIMIT=999999

# Export Limits
FREE_EXPORT_LIMIT=10
PREMIUM_EXPORT_LIMIT=999999

# ==============================================
# EXPORT CONFIGURATION
# ==============================================
# Maximum exports per user
MAX_EXPORTS_PER_USER=100

# Maximum export file size (in bytes)
MAX_EXPORT_FILE_SIZE=104857600  # 100MB

# Export expiry duration (in milliseconds)
EXPORT_EXPIRY_DURATION=604800000  # 7 days

# Export processing timeout (in milliseconds)
EXPORT_PROCESSING_TIMEOUT=300000  # 5 minutes

# ==============================================
# LOGGING
# ==============================================
# Log Level (error, warn, info, debug)
LOG_LEVEL=debug

# Enable request logging
ENABLE_REQUEST_LOGGING=true
